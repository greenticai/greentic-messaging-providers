{
  "$schema": "https://greentic-ai.github.io/greentic-component/schemas/v1/component.manifest.schema.json",
  "id": "ai.greentic.component-provision",
  "name": "provision",
  "version": "0.1.0",
  "world": "greentic:component-provision/provision@0.1.0",
  "description": "Apply provisioning plans to host config/secrets stores.",
  "supports": ["messaging"],
  "profiles": {
    "default": "stateless",
    "supported": ["stateless"]
  },
  "operations": [
    {
      "name": "apply",
      "input_schema": { "type": "string" },
      "output_schema": { "type": "string" }
    }
  ],
  "default_operation": "apply",
  "config_schema": {
    "type": "object",
    "properties": {},
    "required": [],
    "additionalProperties": false
  },
  "capabilities": {
    "wasi": {
      "filesystem": {
        "mode": "none",
        "mounts": []
      },
      "random": false,
      "clocks": false
    },
    "host": {
      "telemetry": {
        "scope": "node"
      },
      "state": {
        "read": false,
        "write": true,
        "delete": false
      }
    }
  },
  "limits": {
    "memory_mb": 128,
    "wall_time_ms": 1000
  },
  "artifacts": {
    "component_wasm": "provision.wasm"
  }
}
