{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Slack Provider-Core Config",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "enabled",
    "public_base_url",
    "api_base_url",
    "bot_token"
  ],
  "properties": {
    "enabled": {
      "type": "boolean",
      "description": "Enable the Slack provider."
    },
    "default_channel": {
      "type": "string",
      "description": "Default channel ID used when destination is omitted."
    },
    "public_base_url": {
      "type": "string",
      "format": "uri",
      "description": "Public base URL for inbound webhook callbacks."
    },
    "api_base_url": {
      "type": "string",
      "format": "uri",
      "description": "Slack API base URL.",
      "default": "https://slack.com/api"
    },
    "bot_token": {
      "type": "string",
      "minLength": 1,
      "description": "Slack bot token used for chat.postMessage calls.",
      "x-redact": true
    }
  }
}
