{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Slack Provider-Core Config",
  "type": "object",
  "properties": {
    "default_channel": {
      "type": "string",
      "description": "Default channel ID used when an invocation omits destination."
    },
    "public_base_url": {
      "type": "string",
      "format": "uri",
      "description": "Public base URL for inbound webhook callbacks."
    },
    "api_base_url": {
      "type": "string",
      "description": "Slack API base URL.",
      "default": "https://slack.com/api"
    }
  },
  "required": ["public_base_url"],
  "additionalProperties": false
}
