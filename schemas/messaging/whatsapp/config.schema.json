{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WhatsApp Provider-Core Config",
  "type": "object",
  "properties": {
    "access_token": {
      "type": "string",
      "description": "Secret store key for the WhatsApp Cloud API access token.",
      "x-secret": true,
      "default": "WHATSAPP_TOKEN"
    },
    "phone_number_id": {
      "type": "string",
      "description": "WhatsApp phone number ID used for sending messages."
    },
    "business_account_id": {
      "type": "string",
      "description": "Optional business account ID."
    },
    "api_base_url": {
      "type": "string",
      "description": "Graph API base URL.",
      "default": "https://graph.facebook.com"
    },
    "api_version": {
      "type": "string",
      "description": "Graph API version.",
      "default": "v19.0"
    }
  },
  "required": ["access_token", "phone_number_id"],
  "additionalProperties": false
}
