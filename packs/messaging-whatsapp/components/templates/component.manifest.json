  },
  "capabilities": {
    "host": {
      "messaging": {
        "inbound": true,
        "outbound": true
      },
      "secrets": {
        "required": []
      },
      "telemetry": {
        "scope": "node"
      }
    },
    "wasi": {
      "clocks": true,
      "filesystem": {
        "mode": "none",
        "mounts": []
      },
      "random": true
    }
  },
  "config_schema": {
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "templates component configuration",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "msg": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "provider": {
            "type": "string"
          },
          "message": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "id": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            }
          }
        }
      },
      "output_path": {
        "default": "text",
        "description": "Dot path where the rendered string is stored",
        "type": "string",
        "x-default-applied": true
      },
      "template": {
        "description": "Handlebars template used to render the reply",
        "type": "string"
      },
      "wrap": {
        "default": true,
        "description": "Wrap output in an object when true; emit a raw string when false",
        "type": "boolean",
        "x-default-applied": true
      },
      "context": {
        "type": "object",
        "additionalProperties": true
      },
      "config": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "anyOf": [
      {
        "required": [
          "msg"
        ]
      },
      {
        "required": [
          "template"
        ]
      }
    ]
  },
  "default_operation": "text",
  "describe_export": "get-manifest",
