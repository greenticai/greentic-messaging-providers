id: requirements
type: job
start: summary
parameters: {}
tags: []
schema_version: 2
entrypoints: {}
nodes:
  summary:
    routing: out
    text:
      config:
        ingress_path: '{{ ingress_path }}'
        mode: '{{ mode }}'
        public_base_url: '{{ public_base_url }}'
      text: |
        Provider: messaging.webchat
        Config schema: schemas/messaging/webchat/public.config.schema.json

        Machine-readable requirements (JSON):
        {
          "provider": "messaging.webchat",
          "config_required": ["mode", "public_base_url"],
          "config_optional": ["ingress_path"],
          "secret_required": [],
          "secret_optional": [],
          "oauth_required": false,
          "subscriptions_required": false
        }

        Notes: Inbound webhooks depend on selected mode.
