{
  "name": "messaging-teams",
  "version": "0.4.11",
  "description": "Provider-core Microsoft Teams messaging pack (Graph send).",
  "kind": "application",
  "publisher": "Greentic",
  "config_schema": {
    "provider_config": {
      "format": "json",
      "path": "schemas/messaging/teams/config.schema.json"
    }
  },
  "components": [
    "ai.greentic.component-templates",
    "messaging-provider-teams",
    "messaging-ingress-teams",
    "templates"
  ],
  "extensions": {
    "greentic.provider-extension.v1": {
      "kind": "greentic.provider-extension.v1",
      "version": "0.4.11",
      "inline": {
        "providers": [
          {
            "provider_type": "messaging.teams.graph",
            "capabilities": [
              "messaging"
            ],
            "ops": [
              "send",
              "reply"
            ],
            "config_schema_ref": "schemas/messaging/teams/config.schema.json",
            "state_schema_ref": "",
            "runtime": {
              "component_ref": "messaging-provider-teams",
              "export": "schema-core-api",
              "world": "greentic:provider/schema-core@1.0.0"
            },
            "docs_ref": ""
          }
        ]
      }
    },
    "messaging.provider_flow_hints": {
      "kind": "messaging.provider_flow_hints",
      "version": "0.4.11",
      "inline": {
        "messaging.teams.graph": {
          "diagnostics": "diagnostics",
          "setup_custom": "setup_custom",
          "setup_default": "setup_default",
          "verify_webhooks": "verify_webhooks"
        }
      }
    },
    "messaging.provider_ingress.v1": {
      "kind": "messaging.provider_ingress.v1",
      "version": "0.4.11",
      "inline": {
        "component_ref": "messaging-ingress-teams",
        "export": "handle-webhook",
        "world": "greentic:messaging-ingress-teams/messaging-ingress-teams@0.0.1",
        "capabilities": {
          "supports_webhook_validation": false,
          "content_types": [
            "application/json"
          ]
        }
      }
    },
    "messaging.subscriptions.v1": {
      "kind": "messaging.subscriptions.v1",
      "version": "0.4.11",
      "inline": {
        "component_ref": "messaging-ingress-teams",
        "export": "sync-subscriptions",
        "world": "greentic:messaging-ingress-teams/messaging-ingress-teams@0.0.1",
        "resources": [
          "message",
          "reaction"
        ],
        "renewal_window_hours": 24
      }
    },
    "messaging.oauth.v1": {
      "kind": "messaging.oauth.v1",
      "version": "0.4.11",
      "inline": {
        "provider_id": "teams",
        "auth_type": "oauth2",
        "authorize_url": "https://login.microsoftonline.com/common/oauth2/v2.0/authorize",
        "token_url": "https://login.microsoftonline.com/{tenant_id}/oauth2/v2.0/token",
        "scopes": [
          "https://graph.microsoft.com/.default"
        ],
        "redirect_path": "/oauth/callback/teams",
        "secret_keys": [
          "MS_GRAPH_REFRESH_TOKEN"
        ]
      }
    }
  },
  "secret_requirements": [
    {
      "name": "MS_GRAPH_CLIENT_SECRET",
      "scope": "tenant",
      "description": "Client secret used for client_credentials or refresh flows."
    },
    {
      "name": "MS_GRAPH_REFRESH_TOKEN",
      "scope": "tenant",
      "description": "Refresh token used when auth_mode selects refresh_token grant."
    }
  ],
  "flows": [
    {
      "id": "diagnostics",
      "file": "flows/diagnostics.ygtc",
      "tags": [
        "default"
      ],
      "entrypoints": [
        "diagnostics"
      ]
    },
    {
      "id": "setup_custom",
      "file": "flows/setup_custom.ygtc",
      "tags": [
        "default"
      ],
      "entrypoints": [
        "setup"
      ]
    },
    {
      "id": "setup_default",
      "file": "flows/setup_default.ygtc",
      "tags": [
        "default"
      ],
      "entrypoints": [
        "setup"
      ]
    },
    {
      "id": "verify_webhooks",
      "file": "flows/verify_webhooks.ygtc",
      "tags": [
        "maintenance"
      ],
      "entrypoints": [
        "diagnostics"
      ]
    }
  ],
  "component_sources": [
    {
      "id": "ai.greentic.component-templates",
      "version": "0.4.11",
      "world": "root:component/root",
      "supports": [
        "messaging"
      ],
      "profiles": {
        "default": "default",
        "supported": [
          "default"
        ]
      },
      "capabilities": {
        "wasi": {
          "random": false,
          "clocks": false
        },
        "host": {}
      },
      "wasm": "components/ai.greentic.component-templates.wasm"
    },
    {
      "id": "messaging-provider-teams",
      "version": "0.4.11",
      "world": "greentic:provider/schema-core@1.0.0",
      "supports": [
        "messaging"
      ],
      "profiles": {
        "default": "default",
        "supported": [
          "default"
        ]
      },
      "capabilities": {
        "wasi": {
          "random": false,
          "clocks": false
        },
        "host": {}
      },
      "wasm": "components/messaging-provider-teams.wasm"
    },
    {
      "id": "messaging-ingress-teams",
      "version": "0.4.11",
      "world": "greentic:messaging-ingress-teams/messaging-ingress-teams@0.0.1",
      "supports": [
        "messaging"
      ],
      "profiles": {
        "default": "default",
        "supported": [
          "default"
        ]
      },
      "capabilities": {
        "wasi": {
          "random": false,
          "clocks": false
        },
        "host": {}
      },
      "wasm": "components/messaging-ingress-teams.wasm"
    },
    {
      "id": "templates",
      "version": "0.4.11",
      "world": "greentic:component/component@0.5.0",
      "supports": [
        "messaging"
      ],
      "profiles": {
        "default": "stateless",
        "supported": [
          "stateless"
        ]
      },
      "capabilities": {
        "wasi": {
          "random": false,
          "clocks": false
        },
        "host": {}
      },
      "wasm": "components/templates.wasm"
    }
  ],
  "capabilities_cache": [
    {
      "component": "ai.greentic.component-templates",
      "version": "v1",
      "path": "components/ai.greentic.component-templates-capabilities_v1.json"
    },
    {
      "component": "templates",
      "version": "v1",
      "path": "components/templates-capabilities_v1.json"
    }
  ]
}
