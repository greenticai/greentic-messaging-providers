{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email Provider-Core Config",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
      "description": "SMTP host name or address"
    },
    "port": {
      "type": "integer",
      "description": "SMTP port",
      "default": 587
    },
    "username": {
      "type": "string",
      "description": "SMTP username"
    },
    "password_key": {
      "type": "string",
      "description": "Secret store key for the SMTP password",
      "x-secret": true,
      "default": "EMAIL_PASSWORD"
    },
    "from_address": {
      "type": "string",
      "description": "Default from address"
    },
    "tls_mode": {
      "type": "string",
      "enum": ["starttls", "implicit", "none"],
      "default": "starttls",
      "description": "TLS mode to use"
    }
  },
  "required": ["host", "username", "from_address"],
  "additionalProperties": false
}
